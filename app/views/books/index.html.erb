<div class="px-4 sm:px-6 lg:px-12 lg:py-4 sm:py-2">
  <%= render HeaderComponent.new(title: t('books.title'), description: t('books.description')) do %>
    <%= link_to t('books.new'), new_book_path, class: "button-primary" %>
  <% end %>

  <div class="mt-6 flex flex-wrap">
    <% @books.each do |book| %>
      <div tabindex="0" class="mx-2 mb-4 w-40 focus:outline-none xl:mb-0">
        <%= link_to book_path(book) do %>
          <div>
            <% if book.poster.present? %>
              <%= image_tag book.poster, class: "focus:outline-none object-cover h-60 w-40" %>
            <% else %>
              <div class="flex h-60 w-40 items-center justify-center bg-gray-100">
                <div class="flex h-full w-full items-center justify-center rounded-lg bg-blue-500 text-6xl font-bold text-white">
                  <%= book.title[0].upcase %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="bg-white dark:bg-gray-800">
            <div class="p-1">
              <div class="flex items-center">
                <h2 tabindex="0" class="text-base font-semibold focus:outline-none dark:text-white">
                  <%= book.title.first(15) %>
                </h2>
              </div>
              <div class="flex items-center justify-between">
                <h2 tabindex="0" class="text-xs font-semibold text-indigo-700 focus:outline-none">
                  <%= link_to book.author.name, author_path(book.author) %>
                </h2>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
