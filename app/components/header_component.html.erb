<div class="border-b border-gray-200 pb-2 sm:flex sm:items-center sm:justify-between">
  <div class="flex flex-col">
    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900"><%= t(@title) %></h1>
    <% if @description.present? %>
      <p class="mt-2 text-sm text-gray-400"><%= @description %></p>
    <% end %>
  </div>
  <div class="mt-3 flex gap-2.5 sm:mt-0 sm:ml-4">
    <%= content %>
  </div>
</div>
